
<head>
  <link href="stylesheets/events.scss" rel="stylesheet">
  <script src="javascripts/events.js" ></script>
</head>

<body>


<div class="container">
  <h2>Upcoming Events</h2>
  <h4>See what's next!</h4>
  <div class="row">
    <div class=>
      <div class="carousel slide multi-item-carousel" id="theCarousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class= "col-md-10 col-md-offset-1" style= "border: 1px solid black">
                <% @events.each do |event| %>
                <div class="col-md-4 center-block", >
                  <div class="thumbnail" style="width:90%; margin:0 auto;"  >
                    <% if event.image != nil %>
                    <%= image_tag event.image, style: 'height:20em'%>
                    <%else%>
                    <img
                      src="data:image/svg+xml;base64,">
                  <%end%>
                  <div class="caption text-center">
                    <h4 class="card-title"><%= event.title %></h4>
                    <p class="card-text"><%= event.location %></p>
                  </div>
                </div>
                  <div class='btn btn-primary center-block' style= "width: 40%; margin-top: 10px"><%= link_to "Resgister Now", event_path(event) %> </div>
                </div>
                <%end%>
            </div>
          </div>
        </body>
